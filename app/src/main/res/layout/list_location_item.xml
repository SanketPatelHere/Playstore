<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="5dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginRight="5dp"
        android:text="12 july 19 | 01:28 AM"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--<LinearLayout
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/horizontal_dashed_line">
        </LinearLayout>-->
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/line"/>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/br_text"
            android:drawablePadding="15dp"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:text="One Pace Plaza, New York, NY 10038, United States"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/br_text"
            android:drawablePadding="15dp"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:text="578 Devonshire Rd"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/br_text"
            android:drawablePadding="15dp"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:text="55 Board St, New York, NY 10004, USA"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/br_text"
            android:drawablePadding="15dp"
            android:textSize="15sp"
            android:text="88 Pine St, New York, NY 10005, USA"/>


    </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Address Note"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="2dp">

        <TextView
            android:id="@+id/tvAddressNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:text="Lorem Ipsum..."
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>